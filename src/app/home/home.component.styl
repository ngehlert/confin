@import "../../utils.styl"

.main
    position: relative

    img
        width: 100%
        max-height: 100vh
    div
        position: absolute
        left: 0
        right: 0
        margin 0 auto
        bottom: 20%
        width: 400px
        text-align: center

    a
    a:active
    a:hover
    a:link
    a:visited
        position: relative
        text-decoration: none
        color: var(--font-color)
        font-size: 2rem

    a:first-child
        margin-right: 1rem
        padding-right: 1rem
        border-right: 1px solid #999

    a::before
        content: "";
        position: absolute;
        left: 0;
        bottom: -0.3rem;
        width: 0;
        height: 0.6rem;
        transform: skew(-36deg) translate(-10%);
        background-color: var(--border-color)
        transition: width 0.3s ease 0s, left 0.3s ease 0s;

    a:hover::before
        width: 50px

.intro
    margin: 4rem 0
    text-align: center

    h1
        font-size: 5rem
        line-height: 5rem
        letter-spacing: 1px
    p
        font-size: 2rem
        line-height: 2rem
        font-style: italic

.benefits

    ul
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr))
        grid-gap: 3em
        max-width: 900px
        margin: 0 auto
        list-style: none
    li
        break-inside: avoid
        padding: 1rem
        margin-bottom: 2rem
        @extend .fancy-border

mark
    color: #CE5F5B
    background: none
